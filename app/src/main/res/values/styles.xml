<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/green</item>
        <item name="colorPrimaryDark">@color/black</item>
        <item name="colorAccent">@color/colorAccent</item>
        <!--<item name="android:colorBackground">@color/black</item>-->
        <!--<item name="android:textColorPrimary">@color/green</item>-->
        <!--<item name="android:windowBackground">@android:color/white</item>-->
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:colorBackground">@color/black</item>
        <item name="android:textColorPrimary">@color/lime</item>
        <item name="android:textColor">@color/lime</item>
        <item name="android:textColorSecondary">@color/blue</item>
        <item name="android:textColorPrimaryInverse">@color/green</item>
        <!--<item name="android:tint">@color/red</item>-->
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="blacklime" parent="Theme.AppCompat.NoActionBar">
        <item name="colorAccent">@color/lime</item>
    </style>
</resources>
